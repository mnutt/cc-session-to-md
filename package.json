{
  "name": "cc-session-to-md",
  "version": "1.0.0",
  "description": "Convert Claude Code session logs to readable Markdown documentation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cc2md": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "claude-code",
    "session",
    "markdown",
    "converter"
  ],
  "author": "mnutt",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "clipboardy": "^4.0.0",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "highlight.js": "^11.9.0",
    "ink": "^4.4.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
